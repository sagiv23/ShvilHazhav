<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ערכת נושא ראשית למצב כהה -->
    <style name="Theme.SagivProject.Dark" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- צבע רקע ראשי של חלון האפליקציה -->
        <item name="android:windowBackground">@color/dark_background_color</item>

        <!-- צבע רקע של סרגל עליון / אזור ניווט -->
        <item name="colorPrimary">@color/dark_background_color_nav</item>

        <!-- צבע טקסט בתוך סרגל עליון / כפתורי ניווט -->
        <item name="colorOnPrimary">@color/dark_nav_text_color</item>

        <!-- צבע טקסט רגיל -->
        <item name="android:textColor">@color/dark_text_color</item>

        <!-- צבע רקע של כפתורים -->
        <item name="colorSecondary">@color/dark_background_color_buttons</item>

        <!-- צבע טקסט בתוך כפתורים -->
        <item name="colorOnSecondary">@color/dark_buttons_text_color</item>

        <!-- צבע פני השטח הכללי (כמו ScrollView, כרטיסים וכו') -->
        <item name="colorSurface">@color/dark_background_color</item>

        <!-- צבע טקסט שמוצג על פני השטח -->
        <item name="colorOnSurface">@color/dark_text_color</item>

        <item name="android:forceDarkAllowed">true</item>

    </style>

    <!-- ערכת הנושא הפעילה של האפליקציה למצב כהה -->
    <style name="Theme.SagivProject" parent="Theme.SagivProject.Dark" />

</resources>