<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/secretPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SecretActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secret_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/background_color_nav"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_secret_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/text_hebrew"
            android:text="@string/back"
            android:textSize="20sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_back"
            app:iconSize="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secret_header" />

    <TextView
        android:id="@+id/txtSecretTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/headline_hebrew"
        android:text="@string/secret"
        android:textColor="@color/headline"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSecretTitle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/headline_english"
            android:text="@string/youtube"
            android:textSize="25sp"
            app:icon="@drawable/ic_youtube"
            app:iconSize="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/headline_english"
            android:text="@string/instagram"
            android:textSize="25sp"
            app:icon="@drawable/ic_instagram"
            app:iconSize="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGithub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/headline_english"
            android:text="@string/github"
            android:textSize="25sp"
            app:icon="@drawable/ic_github"
            app:iconSize="32dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>