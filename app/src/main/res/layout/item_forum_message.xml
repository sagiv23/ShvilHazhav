<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/ItemForumMessageBtnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="אפשרויות הודעה"
            android:src="@drawable/ic_more"
            app:tint="?attr/colorOnSurface"
            android:fontFamily="@font/text"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/ItemForumMessageTxtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/text"/>

        <TextView
            android:id="@+id/ItemForumMessageTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/text"/>

        <TextView
            android:id="@+id/ItemForumMessageTxtIsAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/text"/>

        <TextView
            android:id="@+id/ItemForumMessageTxtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/text"/>

        <TextView
            android:id="@+id/ItemForumMessageTxtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/text"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
