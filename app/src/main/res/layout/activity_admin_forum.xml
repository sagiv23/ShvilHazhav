<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminForumPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AdminForumActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_AdminForum_to_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזרה"
        android:textColor="?attr/colorOnSecondary"
        android:backgroundTint="?attr/colorSecondary"
        android:textSize="25sp"
        android:fontFamily="@font/text"
        app:cornerRadius="25dp"
        app:icon="@drawable/ic_back"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- ScrollView לכל התוכן -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/adminForumScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_AdminForum_to_admin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- כותרת -->
            <TextView
                android:id="@+id/txtAdminForumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="קשר קרוב - מנהל"
                android:textColor="?attr/colorOnBackground"
                android:textSize="40sp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/headline"
                android:gravity="center"/>

            <!-- כרטיס הפורום -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- רשימת הודעות -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_AdminForum"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:overScrollMode="never"
                        android:clipToPadding="false"
                        android:paddingBottom="8dp"/>

                    <!-- שדה כתיבה -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutNewAdminMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="כתוב הודעה..."
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:boxStrokeWidth="1dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_AdminForum_new_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:gravity="top|start"
                            android:textSize="20sp"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="5"
                            android:fontFamily="@font/text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- כפתור שליחה -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_AdminForum_send_message"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="שלח הודעה"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        android:layout_marginTop="2dp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_send"
                        app:iconSize="28dp"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        android:fontFamily="@font/text"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
