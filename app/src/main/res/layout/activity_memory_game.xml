<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memoryGamePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MemoryGameActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_OnlineMemoryGame_to_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="יציאה"
        android:textSize="22sp"
        android:fontFamily="@font/text_hebrew"
        app:cornerRadius="25dp"
        app:icon="@drawable/ic_back"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="משחק זיכרון"
        android:textSize="30sp"
        android:fontFamily="@font/headline_hebrew"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_OnlineMemoryGame_to_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_info_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_OnlineMemoryGame_opponent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משחק נגד: טוען..."
            android:textSize="20sp"
            android:fontFamily="@font/text_hebrew"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tv_OnlineMemoryGame_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אני: 0 | יריב: 0"
            android:textSize="20sp"
            android:fontFamily="@font/text_hebrew" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_OnlineMemoryGame_turn_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ממתין לתחילת משחק..."
        android:textSize="20sp"
        android:fontFamily="@font/text_hebrew"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_info_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_OnlineMemoryGame_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="30sp"
        android:textColor="@color/error"
        android:fontFamily="@font/text_hebrew"
        app:layout_constraintTop_toBottomOf="@id/tv_OnlineMemoryGame_turn_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_OnlineMemoryGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_OnlineMemoryGame_timer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>