<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/headline_hebrew"
            android:gravity="center"
            android:text="@string/אפשרויות"
            android:textColor="@color/headline"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_profileImageDialog_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/text_hebrew"
                android:minWidth="150sp"
                android:text="@string/צלםתמונה"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_profileImageDialog_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/text_hebrew"
                android:minWidth="150sp"
                android:text="@string/בחרמהגלריה"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_profileImageDialog_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/text_hebrew"
                android:minWidth="150sp"
                android:text="@string/מחיקתתמונה"
                android:textSize="22sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_profileImageDialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/text_hebrew"
                android:minWidth="150sp"
                android:text="@string/ביטול"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>