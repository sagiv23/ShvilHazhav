<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mathProblemsPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MathProblemsActivity">

    <LinearLayout
        android:id="@+id/topMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuContainer" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/headline_hebrew"
                android:text="@string/math_exercises"
                android:textColor="@color/headline"
                android:textSize="40sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorOnSurface"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- נתונים -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_MathProblemsPage_correct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:fontFamily="@font/text_hebrew"
                            android:textColor="@color/headline"
                            android:textSize="23sp"
                            tools:text="נכונות: 0" />

                        <TextView
                            android:id="@+id/tv_MathProblemsPage_wrong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_hebrew"
                            android:textColor="@color/headline"
                            android:textSize="23sp"
                            tools:text="טעויות: 0" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_MathProblemsPage_resetStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_hebrew"
                        android:text="@string/data_reset"
                        android:textSize="20sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOnSurface"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_MathProblemsPage_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/headline_hebrew"
                        android:layoutDirection="ltr"
                        android:textColor="@color/headline"
                        android:textDirection="ltr"
                        android:textSize="38sp"
                        tools:text="43 + 37 =" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        app:strokeColor="?attr/colorOnSurface"
                        app:strokeWidth="2dp">

                        <TextView
                            android:id="@+id/tv_MathProblemsPage_user_answer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/text_hebrew"
                            android:gravity="center"
                            android:textSize="36sp"
                            tools:text="80" />
                    </com.google.android.material.card.MaterialCardView>

                    <GridLayout
                        android:id="@+id/keypad_MathProblemsPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:gravity="end"
                        android:layoutDirection="ltr"
                        android:rowCount="4">

                        <!-- Row 1 -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_7"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_8"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_9"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_MathProblemsPage_delete"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/calc_back"
                            android:textSize="20sp"
                            app:cornerRadius="22dp"
                            app:strokeWidth="2dp" />

                        <!-- Row 2 -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_4"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_5"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_6"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_MathProblemsPage_clear"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/clean"
                            android:textSize="20sp"
                            app:cornerRadius="22dp"
                            app:strokeWidth="2dp" />

                        <!-- Row 3 -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_1"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_2"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_3"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_MathProblemsPage_submit"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/vi"
                            android:textSize="20sp"
                            app:cornerRadius="22dp"
                            app:strokeWidth="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/text_hebrew"
                            android:text="@string/_0"
                            android:textSize="28sp"
                            app:cornerRadius="18dp"
                            app:strokeWidth="1dp" />
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>