<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_itemGameLog_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שחקן 1 נגד שחקן 2"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/headline_hebrew" />

        <TextView
            android:id="@+id/txt_itemGameLog_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תוצאה: 0 - 0"
            android:textSize="23sp"
            android:fontFamily="@font/text_hebrew"
            android:layout_gravity="right"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txt_itemGameLog_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סטטוס: הסתיים"
            android:textSize="23sp"
            android:fontFamily="@font/text_hebrew"
            android:layout_gravity="right"
            android:textColor="@color/error" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>