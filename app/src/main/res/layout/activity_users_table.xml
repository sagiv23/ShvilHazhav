<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usersTablePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UsersTableActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_UsersTable_to_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזרה"
        android:textColor="?attr/colorOnSecondary"
        android:backgroundTint="?attr/colorSecondary"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/text"
        app:cornerRadius="25dp"
        app:icon="@android:drawable/ic_media_previous"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- כותרת -->
    <TextView
        android:id="@+id/txtUsersTableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="טבלת משתמשים"
        android:textColor="?attr/colorOnSurface"
        android:textSize="40sp"
        android:fontFamily="@font/headline"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/btn_UsersTable_to_admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- בלוק חיפוש -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:strokeColor="?attr/colorOutline"
        app:layout_constraintTop_toBottomOf="@id/txtUsersTableTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="חפש לפי:"
                android:textColor="?attr/colorOnSurface"
                android:textSize="25sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>

            <Spinner
                android:id="@+id/spinner_UsersTable_search_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/search_types"
                android:spinnerMode="dropdown"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="הקלד כאן..."
                android:fontFamily="@font/text"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_UsersTable_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:fontFamily="@font/text"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- רשימת המשתמשים -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_UsersTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
