<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameHomeScreenPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.GameHomeScreenActivity">

    <LinearLayout
        android:id="@+id/topMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuContainer" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/headline_hebrew"
                android:text="@string/משחקזיכרון"
                android:textColor="@color/headline"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tv_GameHomeScreen_victories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/text_hebrew"
                android:gravity="right"
                android:textSize="25sp"
                tools:ignore="RtlHardcoded"
                tools:text="ניצחונות: " />

            <TextView
                android:id="@+id/tv_GameHomeScreen_status_of_finding_enemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/text_hebrew"
                android:gravity="center"
                android:text="@string/מחפשיריב"
                android:textSize="25sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_GameHomeScreen_find_enemy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_hebrew"
                    android:text="@string/מצאיריב"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_search"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="28dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_GameHomeScreen_cancel_find_enemy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/text_hebrew"
                    android:text="@string/בטלחיפוש"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:visibility="gone"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="28dp" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/headline_hebrew"
                        android:gravity="center"
                        android:text="@string/הוראותהמשחק"
                        android:textSize="30sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_GameHomeScreen_speak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/text_hebrew"
                        android:text="@string/השמעה"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_sound"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="28dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט1משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/headline_hebrew"
                        android:gravity="right"
                        android:text="@string/מטרתהמשחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט2משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/headline_hebrew"
                        android:gravity="right"
                        android:text="@string/כלליהמשחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט3משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט4משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט5משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/headline_hebrew"
                        android:gravity="right"
                        android:text="@string/שיטתהניקוד"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_hebrew"
                        android:gravity="right"
                        android:text="@string/טקסט6משחק"
                        android:textSize="22sp"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/headline_hebrew"
                android:gravity="center"
                android:text="@string/טבלתמובילים"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingHorizontal="1dp"
                android:paddingVertical="10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/headline_hebrew"
                    android:gravity="center"
                    android:text="@string/שםמלא"
                    android:textSize="18sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/אייקוןגביע"
                    android:textSize="18sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_GameHomeScreen_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>