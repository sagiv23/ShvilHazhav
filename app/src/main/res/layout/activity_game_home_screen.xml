<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameHomeScreenPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.GameHomeScreenActivity">

    <!-- שורת הכפתורים העליונה -->
    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/separatorLine">

        <Button
            android:id="@+id/btn_GameHomeScreen_to_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="דף הבית"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

        <Button
            android:id="@+id/btn_GameHomeScreen_to_DetailsAboutUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="משתמש"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

        <Button
            android:id="@+id/btn_GameHomeScreen_to_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="צור קשר"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>

        <Button
            android:id="@+id/btn_GameHomeScreen_to_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="התנתקות"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="none"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    </LinearLayout>

    <!-- קו הפרדה -->
    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/topMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- תוכן מרכזי עם גלילה -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/separatorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

        <!-- כותרת -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משחק הזיכרון"
            android:textColor="?attr/colorOnSurface"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp" />

        <!-- תוצאות שחקן -->
        <TextView
            android:id="@+id/tv_GameHomeScreen_victories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:gravity="right"
            android:layout_marginHorizontal="10dp" />

        <TextView
            android:id="@+id/tv_GameHomeScreen_status_of_finding_enemy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- כפתורים -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_GameHomeScreen_find_enemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מצא יריב"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingHorizontal="20dp"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/btn_GameHomeScreen_cancel_find_enemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בטל חיפוש"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- הוראות -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeColor="?attr/colorOutline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="9dp">

            <TextView
                android:id="@+id/txtInstructionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הוראות המשחק"
                android:textColor="?attr/colorOnSurface"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/txtInstructionsIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="משחק זיכרון זה הוא תחרות אונליין ראש בראש שנועדה לשפר ולחזק את הזיכרון שלכם. המשחק מתנהל בשיטה של שלושה סבבים, כאשר המנצח נקבע על פי סך הנקודות הגבוה ביותר שנצבר לאורך כל המשחק."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <!-- מטרת המשחק -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מטרת המשחק"
                android:textColor="?attr/colorOnSurface"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="לנצח את היריב על ידי צבירת מירב הנקודות לאורך שלושת הסבבים."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <!-- כללי המשחק הבסיסיים -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="כללי המשחק הבסיסיים"
                android:textColor="?attr/colorOnSurface"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 מבנה הסבב: כל סבב מתחיל עם סט קלפים הפוכים. כל שחקן בתורו יחשוף שני קלפים."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 התאמה (זוג): אם שני הקלפים תואמים, השחקן מקבל נקודה והוא מקבל תור נוסף. אם שני הקלפים אינם תואמים, הקלפים מוחזרים למצבם ההפוך (מוסתר), והתור עובר ליריב."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 סיום סבב: הסבב נמשך עד שכל הקלפים נחשפים (נמצאו כל הזוגות)."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 מהלך המשחק: משחקים שלושה סבבים רצופים. בתום הסבב השלישי, מסתיים המשחק."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <!-- שיטת הניקוד -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שיטת הניקוד"
                android:textColor="?attr/colorOnSurface"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 התאמה נכונה (זוג): כל פעם ששחקן מוצא זוג תואם, הוא מקבל +1 נקודה."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 טעות (אי-התאמה): כל פעם ששחקן חושף זוג לא תואם, מנוכה לו 1 נקודה מניקודו הנוכחי."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 מינימום נקודות: הניקוד של שחקן אינו יכול לרדת מתחת ל-0. אם לשחקן יש 0 נקודות, טעות לא תנכה לו נקודה נוספת."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 ניקוד מצטבר: הנקודות שנצברות בכל סבב מתווספות לניקוד הכללי של השחקן ונשמרות בין הסבבים."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <!-- קביעת המנצח -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="קביעת המנצח"
                android:textColor="?attr/colorOnSurface"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בתום הסבב השלישי, סופרים את סך הנקודות הכלליות שצבר כל שחקן. השחקן שצבר את מספר הנקודות המרבי הוא המנצח במשחק."
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginRight="7dp"
                android:gravity="right"/>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>