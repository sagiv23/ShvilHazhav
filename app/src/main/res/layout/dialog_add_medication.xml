<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- שם התרופה -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_medication_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="שם התרופה"
                android:textSize="22sp"
                android:inputType="text"
                android:fontFamily="@font/text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- פרטים -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_medication_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="פרטים"
                android:textSize="22sp"
                android:inputType="text"
                android:fontFamily="@font/text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- תאריך -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_medication_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="תאריך אחרון לשימוש"
                android:textSize="22sp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:fontFamily="@font/text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- כפתורים -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_medication_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:text="הוסף"
                android:textSize="22sp"
                android:layout_margin="4dp"
                android:fontFamily="@font/text"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_medication_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:text="ביטול"
                android:textSize="22sp"
                android:layout_margin="4dp"
                android:fontFamily="@font/text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>