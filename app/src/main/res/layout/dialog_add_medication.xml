<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- שם התרופה -->
        <EditText
            android:id="@+id/edtMedicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="שם התרופה"
            android:inputType="text"
            android:textColorHint="?attr/android:textColorHint"
            android:textColor="?attr/android:textColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- פרטים -->
        <EditText
            android:id="@+id/edtMedicationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="פרטים"
            android:inputType="text"
            android:textColorHint="?attr/android:textColorHint"
            android:textColor="?attr/android:textColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp" />

        <!-- תאריך נטילה -->
        <EditText
            android:id="@+id/edtMedicationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="תאריך אחרון"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:textColorHint="?attr/android:textColorHint"
            android:textColor="?attr/android:textColor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp" />

        <!-- כפתורים -->
        <LinearLayout
            android:id="@+id/dialogButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnAddMedicationConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הוסף"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnAddMedicationCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ביטול"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>