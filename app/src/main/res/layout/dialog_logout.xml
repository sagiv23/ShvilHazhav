<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התנתקות"
            android:textColor="?attr/colorOnSurface"
            android:textSize="30sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/headline"/>

        <TextView
            android:id="@+id/txtDialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="האם ברצונך להתנתק?"
            android:textColor="?attr/colorOnSurface"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="@font/text"/>

        <LinearLayout
            android:id="@+id/dialogButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnLogoutConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="אישור"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="18sp"
                android:fontFamily="@font/text"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnLogoutCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ביטול"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="18sp"
                android:fontFamily="@font/text"
                android:layout_margin="2dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
