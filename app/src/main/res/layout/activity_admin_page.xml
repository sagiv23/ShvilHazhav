<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AdminPageActivity"
    android:padding="16dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

            <!-- 转专转 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="祝  娥か"
                android:textColor="?attr/colorOnSurface"
                android:textSize="37sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt_admin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖  拽专"
                android:textColor="?attr/colorOnSurface"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"/>

            <!-- 拽 驻转专 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtAdminPanelTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驻砖专转 "
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_UsersTablePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转 砖转砖"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:backgroundTint="?attr/colorSecondary"
                        android:layout_marginBottom="16dp"
                        app:cornerRadius="25dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_forum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="拽砖专 拽专"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:backgroundTint="?attr/colorSecondary"
                        android:layout_marginBottom="16dp"
                        app:cornerRadius="25dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_DetailsAboutUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="砖转砖"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:backgroundTint="?attr/colorSecondary"
                        android:layout_marginBottom="16dp"
                        app:cornerRadius="25dp"/>

                    <!-- 驻转专 转转拽转 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_exit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转转拽转"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/holo_red_dark"
                        app:cornerRadius="25dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
