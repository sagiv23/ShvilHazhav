<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    tools:context=".screens.AdminPageActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">

            <!-- 转专转 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="祝  か"
                android:textColor="?attr/colorOnSurface"
                android:textSize="40sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/headline"/>

            <TextView
                android:id="@+id/txt_admin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砖  拽专"
                android:textColor="?attr/colorOnSurface"
                android:textSize="37sp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/text"/>

            <!-- 拽 驻转专 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtAdminPanelTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驻砖专转 "
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/text"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_UsersTablePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转 砖转砖"
                        android:textSize="25sp"
                        android:layout_marginBottom="16dp"
                        app:icon="@drawable/ic_users"
                        app:iconSize="28dp"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        android:fontFamily="@font/text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_AdminForum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="拽砖专 拽专"
                        android:textSize="25sp"
                        android:layout_marginBottom="16dp"
                        app:icon="@drawable/ic_forum"
                        app:iconSize="28dp"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        android:fontFamily="@font/text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_DetailsAboutUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="砖转砖"
                        android:textSize="25sp"
                        android:layout_marginBottom="16dp"
                        app:icon="@drawable/ic_user"
                        app:iconSize="28dp"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        android:fontFamily="@font/text" />

                    <!-- 驻转专 转转拽转 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_admin_to_exit"
                        android:fontFamily="@font/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="转转拽转"
                        android:textSize="25sp"
                        android:backgroundTint="?attr/colorError"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
