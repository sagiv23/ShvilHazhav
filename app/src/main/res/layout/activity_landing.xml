<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.LandingActivity">

    <LinearLayout
        android:id="@+id/topMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separatorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuContainer" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separatorLine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="185dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/app_picture"
                android:scaleType="fitCenter"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/headline_hebrew"
                android:text="@string/welcome"
                android:textColor="@color/headline"
                android:textSize="50sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_landingBody_to_login"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/text_hebrew"
                        android:text="@string/log_in"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_login"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        app:iconSize="28dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_landingBody_to_register"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/text_hebrew"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_register"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        app:iconSize="28dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_landingBody_to_contact"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/text_hebrew"
                        android:text="@string/contact"
                        android:textAllCaps="false"
                        android:textSize="25sp"
                        app:cornerRadius="30dp"
                        app:icon="@drawable/ic_contact_support"
                        app:iconGravity="textEnd"
                        app:iconPadding="12dp"
                        app:iconSize="28dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_hebrew"
                android:text="@string/app_name"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>