<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical|end">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/txtUserFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שם מלא"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>

            <TextView
                android:id="@+id/txt_UserRow_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="אימייל"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="22sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>

            <TextView
                android:id="@+id/txt_UserRow_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="סיסמה"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="20sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>

            <TextView
                android:id="@+id/txt_UserRow_IsAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="מנהל: "
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="22sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>

            <TextView
                android:id="@+id/txt_UserRow_wins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ניצחונות: "
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="20sp"
                android:gravity="right"
                android:fontFamily="@font/text"/>
        </LinearLayout>

        <!-- כפתור הפיכת משתמש למנהל -->
        <ImageButton
            android:id="@+id/btn_UserRow_MakeAdmin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_admin_status"
            android:contentDescription="הפוך למנהל"
            app:tint="?attr/colorOnSurface" />

        <!-- כפתור מחיקת משתמש -->
        <ImageButton
            android:id="@+id/btn_UserRow_DeleteUser"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="מחק משתמש"
            app:tint="?attr/colorOnSurface" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
