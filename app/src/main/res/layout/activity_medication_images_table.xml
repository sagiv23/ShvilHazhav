<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medicationImagesTablePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".screens.MedicationImagesTableActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_MedicineImagesTablePage_to_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזרה"
        android:textSize="25sp"
        android:fontFamily="@font/text_hebrew"
        app:cornerRadius="25dp"
        app:icon="@drawable/ic_back"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- כותרת -->
    <TextView
        android:id="@+id/txtMedicineImagesTablePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="טבלת תמונות התרופות"
        android:textSize="40sp"
        android:fontFamily="@font/headline_hebrew"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_MedicineImagesTablePage_to_admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_MedicineImagesTablePage_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוספת תמונה של תרופה"
        android:textSize="22sp"
        android:fontFamily="@font/text_hebrew"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtMedicineImagesTablePageTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- כרטיס חיפוש -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard_MedicineImagesTablePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        app:layout_constraintTop_toBottomOf="@id/btn_MedicineImagesTablePage_add">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="חפש לפי ID (למשל card1)..."
            app:startIconDrawable="@drawable/ic_search"
            app:boxBackgroundMode="none"
            android:fontFamily="@font/text_english"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_MedicineImagesTablePage_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:inputType="text"
                android:fontFamily="@font/text_english"
                android:textDirection="ltr"/>

        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_MedicineImagesTablePage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="32dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/searchCard_MedicineImagesTablePage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>